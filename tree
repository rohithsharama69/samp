<?php
$name=$_POST["n1"];

class car{
private $name;
function __construct($name)
{
$this->name=$name;
echo "$this->name is created<br>";
}
function drive(){
echo "$this->name is driving<br>";
}
function __destruct()
{
echo "$this->name is destroyed";
}
}
$car1=new car($name);
$car1->drive();
?>

