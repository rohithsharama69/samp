<?php

$mat1=$_POST["mat1"];
$mat2=$_POST["mat2"];
$result=array();

echo "Matric addition<br>";
echo "<table border='1'>";
for($i=0;$i<2;$i++)
{
echo "<tr>";
for($j=0;$j<2;$j++)
{
$result[$i][$j]=$mat1[$i][$j]+$mat2[$i][$j];
echo "<td>".$result[$i][$j]."</td>";
}
echo "</tr>";
}
echo "</table>";

?>

