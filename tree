<?php
function fib($n1)
{
if($n1<2)
{
return $n1;
}
return fib($n1-1)+fib($n1-2);
}

$n1=$_POST["n1"];
echo "Fibonacci Series<br>";
for($i=0;$i<$n1;$i++)
{
echo "fib($i)".fib($i)."<br>";
}
?>

